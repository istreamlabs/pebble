{
  "name": "@istreamplanet/pebble",
  "version": "0.4.0",
  "description": "Pebble Design System",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/iStreamPlanet/pebble.git"
  },
  "author": "iStreamPlanet",
  "license": "Apache-2.0",
  "main": "dist/Components/index.js",
  "module": "dist/Components/index.js",
  "files": [
    "dist/*"
  ],
  "dependencies": {
    "classnames": "^2.2.6",
    "focus-trap-react": "^6.0.0",
    "prop-types": "^15.7.2",
    "react-onclickoutside": "^6.8.0"
  },
  "peerDependencies": {
    "react": "^16.7.0",
    "react-dom": "^16.7.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/preset-env": "^7.3.1",
    "@storybook/addon-actions": "^5.0.1",
    "@storybook/addon-links": "^5.0.1",
    "@storybook/addons": "^5.0.1",
    "@storybook/react": "^5.0.1",
    "babel-loader": "8.0.5",
    "codecov": "^3.2.0",
    "cpx": "^1.5.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.12.3",
    "fs-extra": "^7.0.1",
    "glob": "^7.1.3",
    "node-sass": "^4.11.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-scripts": "2.1.8",
    "react-styleguidist": "^9.0.4",
    "react-test-renderer": "^16.7.0",
    "rimraf": "^2.6.3",
    "storybook-chromatic": "^1.3.0",
    "svgo": "^1.1.1"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "yarn clean && cpx 'src/Styles/**/*' dist/Styles && cpx 'src/Components/**/*.{sass,scss}' dist/Components && babel src/Components -d dist/Components && babel src/Utils -d dist/Utils",
    "start": "react-scripts start",
    "test": "react-scripts test",
    "cover": "react-scripts test --coverage",
    "styleguide": "styleguidist server --open",
    "styleguide:build": "styleguidist build",
    "lint": "eslint src/Components/**/*.js",
    "genIcons": "node ./src/Icons/generateIcons.js",
    "prepack": "yarn build",
    "preversion": "yarn cover",
    "postversion": "git push --follow-tags",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "chromatic": "chromatic test"
  },
  "eslintIgnore": [
    "dist/**/*.js"
  ],
  "eslintConfig": {
    "extends": "airbnb",
    "parser": "babel-eslint",
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "jest": true
    },
    "settings": {
      "import/resolver": {
        "node": {
          "moduleDirectory": [
            "node_modules",
            "src/"
          ]
        }
      }
    },
    "rules": {
      "react/jsx-filename-extension": 0,
      "comma-dangle": 0,
      "default-case": 0,
      "import/prefer-default-export": 0,
      "no-throw-literal": 0,
      "array-callback-return": 0,
      "prefer-promise-reject-errors": 0,
      "no-param-reassign": 0,
      "consistent-return": 0,
      "no-shadow": 0,
      "no-restricted-globals": 0,
      "no-control-regex": 0,
      "no-underscore-dangle": 0,
      "react/require-default-props": 0,
      "import/no-named-default": 0,
      "react/forbid-prop-types": 0,
      "react/jsx-closing-tag-location": 0,
      "jsx-a11y/no-static-element-interactions": 0,
      "jsx-a11y/click-events-have-key-events": 0,
      "jsx-a11y/label-has-for": 0,
      "jsx-a11y/label-has-associated-control": 0,
      "no-return-assign": 0,
      "no-unused-expressions": 0,
      "react/sort-comp": 0,
      "react/no-array-index-key": 0,
      "import/no-named-as-default": 0,
      "jsx-a11y/no-noninteractive-element-interactions": 0,
      "react/prefer-stateless-function": 0,
      "react/no-unused-prop-types": 0,
      "react/default-props-match-prop-types": 0,
      "no-plusplus": 0,
      "no-continue": 0,
      "react/no-access-state-in-setstate": 0,
      "import/no-duplicates": 0,
      "no-nested-ternary": 0,
      "no-prototype-builtins": 0,
      "import/no-extraneous-dependencies": 0,
      "no-use-before-define": 0,
      "new-cap": 0,
      "import/no-mutable-exports": 0,
      "no-restricted-syntax": 0,
      "guard-for-in": 0,
      "class-methods-use-this": 0,
      "react/no-unescaped-entities": 0,
      "camelcase": 0,
      "max-len": 0,
      "no-sequences": 0,
      "import/named": 0,
      "import/order": 0,
      "no-tabs": 0,
      "radix": 0,
      "no-lonely-if": 0,
      "prefer-spread": 0,
      "import/no-dynamic-require": 0,
      "global-require": 0,
      "func-names": 0
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/Components/**/*.{js,jsx,mjs}",
      "!src/Components/**/stories.{js,jsx}",
      "!**/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    }
  }
}
