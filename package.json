{
  "name": "@istreamplanet/pebble",
  "version": "2.11.0",
  "description": "Pebble Design System",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/iStreamPlanet/pebble.git"
  },
  "author": "iStreamPlanet",
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
    "dist/*"
  ],
  "dependencies": {
    "@babel/runtime": "^7.6.0",
    "@reach/visually-hidden": "^0.14.0",
    "classnames": "^2.2.6",
    "focus-trap-react": "^6.0.0",
    "framer-motion": "^1.6.7",
    "moment": "^2.24.0",
    "prop-types": "^15.7.2",
    "react-datepicker": "1.8.0",
    "react-merge-refs": "^1.0.0",
    "react-onclickoutside": "^6.9.0",
    "react-popper": "^1.3.4",
    "react-select": "^3.0.4",
    "react-toastify": "^5.3.2"
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "react-router-dom": "^4.0.0 || ^5.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.5",
    "@babel/core": "^7.7.5",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-transform-runtime": "^7.7.6",
    "@babel/preset-env": "^7.7.6",
    "@storybook/addon-a11y": "^5.2.8",
    "@storybook/addon-actions": "^5.2.8",
    "@storybook/addon-knobs": "^5.2.8",
    "@storybook/addon-links": "^5.2.8",
    "@storybook/addons": "^5.2.8",
    "@storybook/react": "^5.2.8",
    "@storybook/theming": "^5.2.8",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^9.2.0",
    "@testing-library/react-hooks": "^5.1.0",
    "cpx": "^1.5.0",
    "cross-env": "^6.0.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "fs-extra": "^8.1.0",
    "glob": "^7.1.6",
    "node-sass": "^4.13.0",
    "prettier": "1.19.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.0.0",
    "react-scripts": "3.3.0",
    "react-styleguidist": "^10.3.2",
    "react-test-renderer": "^16.12.0",
    "rimraf": "^3.0.0",
    "storybook-chromatic": "^3.4.1",
    "svg-to-jsx": "^1.0.2",
    "svgo": "^1.3.2"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "yarn clean && cpx 'src/Styles/**/*' dist/Styles && cpx 'src/Components/**/*.{sass,scss}' dist/Components && babel src/index.js -d dist/ && babel src/Components -d dist/Components && babel src/Utils -d dist/Utils && babel src/Types -d dist/Types && babel src/Hooks -d dist/Hooks",
    "start": "yarn storybook",
    "test": "react-scripts test",
    "cover": "react-scripts test --coverage",
    "styleguide": "styleguidist server --open",
    "styleguide:build": "styleguidist build",
    "lint": "eslint src/Components/**/*.js",
    "genIcons": "node ./src/Icons/generateIcons.js",
    "prepack": "yarn build",
    "preversion": "cross-env CI=1 yarn cover",
    "postversion": "git push --follow-tags",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "chromatic": "chromatic test",
    "npm-publish": "npm-publish -t=next"
  },
  "eslintIgnore": [
    "dist/**/*.js"
  ],
  "eslintConfig": {
    "extends": [
      "airbnb",
      "prettier",
      "prettier/react"
    ],
    "parser": "babel-eslint",
    "plugins": [
      "react-hooks",
      "prettier"
    ],
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "jest": true
    },
    "settings": {
      "import/resolver": {
        "node": {
          "moduleDirectory": [
            "node_modules",
            "src/"
          ]
        }
      }
    },
    "rules": {
      "react/jsx-props-no-spreading": 0,
      "react-hooks/rules-of-hooks": "error",
      "react/jsx-filename-extension": 0,
      "comma-dangle": 0,
      "default-case": 0,
      "import/prefer-default-export": 0,
      "no-throw-literal": 0,
      "array-callback-return": 0,
      "prefer-promise-reject-errors": 0,
      "no-param-reassign": 0,
      "consistent-return": 0,
      "no-shadow": 0,
      "no-restricted-globals": 0,
      "no-control-regex": 0,
      "no-underscore-dangle": 0,
      "react/require-default-props": 0,
      "import/no-named-default": 0,
      "react/forbid-prop-types": 0,
      "react/jsx-closing-tag-location": 0,
      "jsx-a11y/no-static-element-interactions": 0,
      "jsx-a11y/click-events-have-key-events": 0,
      "jsx-a11y/label-has-for": 0,
      "jsx-a11y/label-has-associated-control": 0,
      "no-return-assign": 0,
      "no-unused-expressions": 0,
      "react/sort-comp": 0,
      "react/no-array-index-key": 0,
      "import/no-named-as-default": 0,
      "jsx-a11y/no-noninteractive-element-interactions": 0,
      "react/prefer-stateless-function": 0,
      "react/no-unused-prop-types": 0,
      "react/default-props-match-prop-types": 0,
      "no-plusplus": 0,
      "no-continue": 0,
      "react/no-access-state-in-setstate": 0,
      "import/no-duplicates": 0,
      "no-nested-ternary": 0,
      "no-prototype-builtins": 0,
      "import/no-extraneous-dependencies": 0,
      "no-use-before-define": 0,
      "new-cap": 0,
      "import/no-mutable-exports": 0,
      "no-restricted-syntax": 0,
      "guard-for-in": 0,
      "class-methods-use-this": 0,
      "react/no-unescaped-entities": 0,
      "camelcase": 0,
      "max-len": 0,
      "no-sequences": 0,
      "import/named": 0,
      "import/order": 0,
      "no-tabs": 0,
      "radix": 0,
      "no-lonely-if": 0,
      "prefer-spread": 0,
      "import/no-dynamic-require": 0,
      "global-require": 0,
      "func-names": 0,
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/Components/**/*.{js,jsx,mjs}",
      "!src/Components/**/stories.{js,jsx}",
      "!**/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    }
  }
}
